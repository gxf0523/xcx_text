/* pages/savePicture/savePicture.wxss */
.sub-title {
  font-size: 80rpx;
  font-weight: 600;
  color: #646566;
  opacity: 0.4;
  position: relative;
}
.product-container {
  padding: 0 30rpx;
  background-color: #323233;
}
.card-container {
  width: 100%;
  height: 540rpx;
  display: flex;
  flex-direction: column;
  transform: translateY(-30rpx);
}
.card-content {
  flex: 1;
  border-radius: 24rpx;
  border-bottom-left-radius: 0;
  background-color:   #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.card-image {
  width: 470rpx;
  height: 470rpx;
}
.card-tail {
  width: 100%;
  height: 26rpx;
  background-color: #ffffff;
  position: relative;
  overflow: hidden;
}
.card-tail::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  border-top-left-radius: 24rpx * 1.5;
  background-color: #323233;
}
.title {
  color: #ffffff;
}
.price {
  margin: 30rpx 0 50rpx;
  font-size: 32rpx * 1.3;
  color: #ffffff;
  font-weight: 600;
}
.share-btn {
  width: 600rpx;
  height: 40px;
  border-radius: 40rpx;
  background-color: #18ceb5;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  font-weight: 600;
}
.tips {
  font-size: 24rpx;
  text-align: center;
  padding: 30rpx 0 50rpx;
  color: #c8c9cc;
}
.count-down-container {
  height: 180rpx;
  overflow: hidden;
}
.count-down {
  background-color: #fff;
  width: 690rpx;
  margin: 0 auto;
  align-items: center;
  border-radius: 24rpx;
  transform: translateY(-24rpx);
  box-shadow: 0px 0px 10px #c8c9cc;
}
.cd-sub-title {
  text-align: center;
  line-height: 1;
  color: #dcdee0;
}
.cd-detail {
  margin-left: 20rpx;
  padding: 20rpx 0 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.cd-detail .cd-time {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.cd-time .time {
  width: 50rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background-color: #18ceb5;
  color: #fff;
  margin: 0 6rpx;
  border-radius: 12rpx;
}  
.colon {
  font-weight: bolder;
  font-size: 32rpx;
}
.time-limit {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  background-color: #323233;
  padding: 0 16rpx;
  color: #ffffff;
  margin-left: auto;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}